{% if filter.values | length > 1 %}
    {% set min = min(filter.values) %}
    {% set max = max(filter.values) %}
    <section class="uk-card-body js-accordion-section filter-block uk-open">
        <h4 class="uk-accordion-title uk-margin-remove">
            {{ filter.title | trans }}
        </h4>
        <div class="uk-accordion-content uk-margin-remove uk-padding uk-padding-remove-horizontal">
            <div class="uk-padding uk-padding-small">
                <div class="shk-slider-range" data-name="{{ filter.name }}">
                    <input class="form-control"
                           name="filter[{{ filter.name }}][from]"
                           type="range"
                           min="{{ min }}"
                           max="{{ max }}"
                           step="0.1"
                           value="{{ min }}">
                    <input class="form-control"
                           name="filter[{{ filter.name }}][to]"
                           type="range"
                           min="{{ min }}"
                           max="{{ max }}"
                           step="0.1"
                           value="{{ max }}">
                </div>
            </div>
        </div>
    </section>
{% endif %}