{% extends 'base.html.twig' %}

{% block body %}

    {{ contentList(
        'banner-homepage',
        'banner',
        {"isActive": true, "parentId": 23},
        {"_id": "asc"},
        10, 1, 'banners-homepage'
    ) }}

    {#{% include 'homepage-categories.html.twig' %}#}

    <section class="uk-section uk-section-small">
        <div class="uk-container">
            <h2 class="uk-text-center">{{ 'Trending items' | trans }}</h2>
            <div class="uk-card uk-card-default tm-ignore-container">
                <div class="uk-grid-collapse uk-child-width-1-3 uk-child-width-1-4@m tm-products-grid" uk-grid>

                    {{ contentList(
                        'content_list',
                        'products',
                        {"isActive": true, "tags": {"$elemMatch": {"$in": ["New", "Новинка"]}}},
                        {"_id": "desc"},
                        8, 1, '', 'hn_page', 'hn_limit', {currency: currency}
                    ) }}

                </div>
            </div>
            <div class="uk-margin uk-text-center">
                <a class="uk-link-muted uk-text-uppercase tm-link-to-all" href="/catalog/">
                    <span>shop all</span>
                    <span uk-icon="icon: chevron-right; ratio: .75;"></span>
                </a>
            </div>
        </div>
    </section>

    {{ contentList(
        'brands-slider-homepage',
        'brand',
        {"isActive": true, "parentId": 29, popular: true},
        {"title": "asc"},
        12, 1, 'brands-slider-homepage'
    ) }}

    {{ contentList(
        'blog-homepage',
        'blog',
        {"isActive": true, "parentId": 28},
        {"datetime": "desc"},
        2, 1, 'blog-homepage'
    ) }}

    <section class="uk-section uk-section-default uk-section-small">
        <div class="uk-container">
            <div class="uk-grid-medium uk-child-width-1-1 uk-child-width-1-2@s" uk-grid>
                <section>

                    {{ includeContent('homepage-about', 'text_content', 1, 'homepage-about') }}

                </section>
                <section>

                    {{ contentList(
                        'news-homepage',
                        'news',
                        {"isActive": true, "parentId": 23},
                        {"datetime": "desc"},
                        3, 1, 'news-homepage'
                    ) }}

                </section>
            </div>
        </div>
    </section>

    {% include 'subscribe.html.twig' %}

    {{ contentList(
        'banner-features',
        'banner',
        {"isActive": true, "parentId": 24},
        {"_id": "asc"},
        10, 1, 'banner-featurese'
    ) }}

{% endblock %}
