{% extends 'base.html.twig' %}

{% block body %}
    <section class="uk-section uk-section-small">
        <div class="uk-container">
            <div class="uk-grid-medium uk-child-width-1-1" uk-grid>
                <section class="uk-text-center">
                    {% include 'nav/breadcrumbs.html.twig' %}
                </section>
                <section>
                    <div>
                        <article class="uk-card uk-card-default uk-card-body uk-article tm-ignore-container">
                            <header class="uk-text-center">
                                <h1 class="uk-article-title">{{ currentPage.title }}</h1>
                                <div class="uk-article-meta">
                                    <time>{{ currentPage.datetime | date }}</time>
                                </div>
                            </header>
                            <section class="uk-article-body">
                                <p>{{ currentPage.summary }}</p>
                                {% if currentPage.image is not empty %}
                                <div class="tm-wrapper uk-text-center">
                                    <figure>
                                        <img src="{{ imageUrl(currentPage.image) }}" alt="{{ currentPage.title }}">
                                    </figure>
                                </div>
                                {% endif %}
                                {{ currentPage.description | raw }}
                            </section>
                        </article>
                    </div>
                </section>
            </div>
        </div>
    </section>
{% endblock %}
