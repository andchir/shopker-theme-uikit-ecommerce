<li>
    <a href="/catalog/">
        {{ 'Catalog' | trans }}
        <span class="uk-margin-xsmall-left" uk-icon="icon: chevron-down; ratio: .75;"></span>
    </a>
    <div class="uk-navbar-dropdown uk-padding-remove-vertical" uk-drop="pos: bottom-justify;delay-show: 125;delay-hide: 50;duration: 75;boundary: .tm-navbar-container;offset: 10px;boundary-align: true;pos: bottom-justify;flip: x">
        <div class="uk-container">
            <ul class="uk-navbar-dropdown-grid uk-child-width-1-5" uk-grid>

                {% for category in children %}
                <li>
                    <div class="uk-margin-top uk-margin-bottom">
                        <a class="uk-link-reset" href="{{ catalogPath(category.uri, '', category) }}">
                            <img class="uk-display-block uk-margin-auto uk-margin-bottom" src="{{ imageUrl(category.image, '/assets/uikit-ecommerce/images/catalog/shopping.svg') }}" alt="{{ category.title }}" width="80" height="80">
                            <div class="uk-text-bolder">{{ category.title }}</div>
                        </a>
                        {{ categoriesTree(category.id, 'menu_dropdown_child', category) }}
                    </div>
                </li>
                {% endfor %}

            </ul>
        </div>
    </div>
</li>