{% extends 'base.html.twig' %}

{% block title %}{{ currentPage.title | default('') }} - {{ app_name }}{% endblock %}

{% block body %}
    <section class="uk-section uk-section-small">
        <div class="uk-container">
            <div>
                <div class="uk-text-center uk-margin-bottom">
                    {% include 'nav/breadcrumbs.html.twig' %}
                    <h1 class="uk-margin-small-top uk-margin-remove-bottom">{{ currentCategory.title }}</h1>
                </div>
                <div>
                    
                    <div class="uk-card uk-card-default tm-ignore-container">
                        <section class="uk-card-body">
                            <div uk-grid>
                                <div class="uk-width-1-1 uk-width-expand@m">
                                    <ul class="uk-grid-small uk-child-width-1-2 uk-child-width-1-4@s uk-child-width-1-5@m" uk-grid>

                                        {% for item in items %}
                                        <li>
                                            <a class="uk-link-muted uk-text-center uk-display-block uk-padding-small uk-box-shadow-hover-large" href="{{ catalogPath(currentCategory.uri, item.name, item, 'categories') }}">
                                                <div class="tm-ratio tm-ratio-4-3">
                                                    <div class="tm-media-box">
                                                        <figure class="tm-media-box-wrap">
                                                            <img class="item-brand" src="{{ imageUrl(item.image, '/img/nofoto.png') }}" alt="{{ item.title }}">
                                                        </figure>
                                                    </div>
                                                </div>
                                                <div class="uk-margin-small-top uk-text-truncate">{{ item.title }}</div>
                                            </a>
                                        </li>
                                        {% endfor %}

                                    </ul>
                                </div>
                            </div>
                        </section>
                    </div>

                </div>
            </div>
        </div>
    </section>

    {% include 'features.html.twig' %}
{% endblock %}
